<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="net.rong.italker.push">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".App"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:allowBackup"
        tools:targetApi="m">
        <activity
            android:name=".activities.GroupCreateActivity"
            android:label="@string/title_activity_group_create"
            android:theme="@style/AppTheme.Group.Create"></activity>
        <activity
            android:name=".activities.PersonalActivity"
            android:label="@string/title_activity_personal" />
        <activity
            android:name=".activities.MessageActivity"
            android:label="@string/title_activity_message"
            android:theme="@style/AppTheme.Message" /> <!-- 个推的广播注册 -->
        <!-- <receiver -->
        <!-- android:name=".MessageReceiver" -->
        <!-- android:enabled="true" -->
        <!-- android:exported="true" -->
        <!-- android:permission="1000"> -->
        <!-- <intent-filter> -->
        <!-- <action android:name="com.igexin.sdk.action.${GETUI_APP_ID}" /> -->
        <!-- </intent-filter> -->
        <!-- </receiver> -->
        <service
            android:name=".AppPushService"
            android:enabled="true"
            android:exported="true"
            android:label="AppPushService"
            android:permission="1000"
            android:process=":pushservice" />
        <service
            android:name=".AppMessageReceiverService"
            android:enabled="true"
            android:exported="true"
            android:label="AppMessageReceiverService"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <activity
            android:name=".activities.SearchActivity"
            android:label="@string/title_search"
            android:theme="@style/AppTheme.TransStatusBar" />
        <activity
            android:name=".activities.UserActivity"
            android:label="@string/title_activity_user"
            android:theme="@style/AppTheme.Account" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name=".LaunchActivity"
            android:label="@string/title_activity_launch">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AccountActivity"
            android:theme="@style/AppTheme.Account" />
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/AppTheme.Main" />
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>